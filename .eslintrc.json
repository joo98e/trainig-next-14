{
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true
      }
    ],
    "semi": "off",
    "no-empty-pattern": "off",
    "linebreak-style": "off",
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": "off",
    "no-undef": "off"
  }
}